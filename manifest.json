{
  "manifest_version": 3,
  "name": "Movie Rating Extension",
  "version": "1.0.5",
  "description": "Rate and discover movies with community ratings and Kinopoisk integration",
  "permissions": [
    "identity",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://*.firebaseio.com/*",
    "https://*.googleapis.com/*",
    "https://api.kinopoisk.dev/*",
    "https://firebasestorage.googleapis.com/*",
    "https://*.firebasestorage.app/*"
  ],
  "oauth2": {
    "client_id": "532518163829-t60hfab5q5vinfdhpci6ctli17kb5thv.apps.googleusercontent.com",
    "scopes": [
      "profile",
      "email",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Movie Rating Extension",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "search.html",
        "ratings.html",
        "ratings.js",
        "src/styles/*.css",
        "src/services/*.js",
        "src/config/*.js",
        "src/utils/*.js",
        "src/components/*.js",
        "icons/*.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}

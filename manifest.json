{
  "manifest_version": 3,
  "name": "Movie Rating Extension",
  "version": "1.1.7",
  "description": "Rate and discover movies with community ratings and Kinopoisk integration",
  "permissions": [
    "identity",
    "tabs",
    "storage",
    "scripting",
    "downloads",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://*.firebaseio.com/*",
    "https://*.googleapis.com/*",
    "https://api.kinopoisk.dev/*",
    "https://firebasestorage.googleapis.com/*",
    "https://*.firebasestorage.app/*",
    "https://ex-fs.net/*",
    "https://zfilms-hd.by/*",
    "https://hdrezka.co/*",
    "https://www.kinopoisk.ru/*",
    "https://www.imdb.com/*",
    "https://kinogo.inc/*",
    "https://api.github.com/*",
    "https://github.com/*"
  ],
  "oauth2": {
    "client_id": "532518163829-t60hfab5q5vinfdhpci6ctli17kb5thv.apps.googleusercontent.com",
    "scopes": [
      "profile",
      "email",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Movie Rating Extension",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/pages/search/search.html",
        "src/pages/ratings/ratings.html",
        "src/pages/watchlist/watchlist.html",
        "src/pages/favorites/favorites.html",
        "src/pages/collection/collection.html",
        "src/pages/profile/profile.html",
        "src/pages/update/update_instructions.html",
        "src/pages/ratings/ratings.js",
        "src/pages/watchlist/watchlist.js",
        "src/pages/favorites/favorites.js",
        "src/pages/collection/collection.js",
        "src/pages/profile/profile.js",
        "src/shared/styles/*.css",
        "src/shared/services/*.js",
        "src/shared/config/*.js",
        "src/shared/utils/*.js",
        "src/shared/components/*.js",
        "icons/*.png",
        "libs/*.js",
        "src/shared/firestore.js",
        "content-scripts/*.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "content_scripts": [
    {
      "matches": [
        "https://ex-fs.net/*"
      ],
      "js": [
        "content-scripts/ex-fs-watchlist.js"
      ],
      "css": [
        "src/shared/styles/ex-fs-watchlist.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://zfilms-hd.by/*"
      ],
      "js": [
        "content-scripts/zfilms-watchlist.js"
      ],
      "css": [
        "src/shared/styles/ex-fs-watchlist.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://hdrezka.co/*"
      ],
      "js": [
        "content-scripts/hdrezka-watchlist.js"
      ],
      "css": [
        "src/shared/styles/ex-fs-watchlist.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.kinopoisk.ru/*"
      ],
      "js": [
        "content-scripts/kinopoisk-watchlist.js"
      ],
      "css": [
        "src/shared/styles/ex-fs-watchlist.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.imdb.com/*"
      ],
      "js": [
        "content-scripts/imdb-watchlist.js"
      ],
      "css": [
        "src/shared/styles/ex-fs-watchlist.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://kinogo.inc/*"
      ],
      "js": [
        "content-scripts/kinogo-watchlist.js"
      ],
      "css": [
        "src/shared/styles/ex-fs-watchlist.css"
      ],
      "run_at": "document_idle"
    }
  ]
}
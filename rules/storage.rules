rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read avatars, but only owner can write
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow anyone to read banners, but only owner can write
    match /banners/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
